{
    "name": "nebulabuilders",
    "version": "1.0.0",
    "type": "module",
    "description": "A static blog built with Hugo, HTMX, Tailwind CSS, and TypeScript",
    "scripts": {
        "dev": "concurrently \"hugo server --disableFastRender --poll 700ms\" \"vite\"",
        "build": "hugo --gc --minify && vite build",
        "preview": "hugo server --disableFastRender",
        "type-check": "tsc --noEmit",
        "lint": "eslint 'src/**/*.{js,ts}'",
        "format": "prettier --write 'src/**/*.{js,ts,css,md,json}'",
        "analyze": "vite build --mode analyze",
        "optimize-images": "imagemin 'static/images/**/*' --out-dir='static/images/optimized'"
    },
    "dependencies": {
        "fuse.js": "^7.0.0",
        "htmx.org": "^2.0.0"
    },
    "devDependencies": {
        "@types/node": "^22.5.4",
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/typography": "^0.5.15",
        "@typescript-eslint/eslint-plugin": "^8.4.0",
        "@typescript-eslint/parser": "^8.4.0",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.0.0",
        "eslint": "^9.10.0",
        "husky": "^9.1.5",
        "imagemin-cli": "^7.0.0",
        "lint-staged": "^15.2.10",
        "postcss": "^8.4.45",
        "postcss-cli": "^11.0.0",
        "prettier": "^3.3.3",
        "rollup-plugin-visualizer": "^5.9.0",
        "tailwindcss": "^3.4.10",
        "typescript": "^5.5.4",
        "vite": "^5.4.3",
        "vite-plugin-compression": "^0.5.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{css,md,json}": [
            "prettier --write"
        ]
    }
}